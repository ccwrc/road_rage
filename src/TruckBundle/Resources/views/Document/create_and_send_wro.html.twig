{% extends "TruckBundle:Document:document_layout.html.twig" %}

{% block body %}
    {{ parent() }}

    <b>Repair Order: Withdrawal</b><br/>
    <b>Case {{ accidentCaseId }} started at:</b> {{ accidentCase.timeStart | date("d/m/Y H:i:s") }} <br/>
    <b>Operator name:</b> {{ operatorName }}<br/>
    {% if outComment != "" %}
        <b>Operator comment:</b> {{ outComment }}<br/>
    {% endif %}
    <br/>

    <i>To:</i> <br/>
    <b>Dealer name:</b> {{ repairDealer.name }} <br/>
    <b>Street:</b> {{ repairDealer.street }} <br/>
    <b>Zip-code, city:</b> {{ repairDealer.zipCode }}, {{ repairDealer.city }}  <br/>
    <b>Phone:</b> {{ repairDealer.mainPhone }} <br/>
    <b>Mail:</b> {{ repairDealer.mainMail }} <br/>
    <hr/>

    <i>Home dealer:</i> <br/>
    <b>Dealer name:</b> {{ homeDealer.name }} <br/>
    <b>Street:</b> {{ homeDealer.street }} <br/>
    <b>Zip-code, city:</b> {{ homeDealer.zipCode }}, {{ homeDealer.city }}  <br/>
    <b>Phone:</b> {{ homeDealer.mainPhone }} <br/>
    <b>Mail:</b> {{ homeDealer.mainMail }} <br/>
    <hr/>

    <i>Client/Vehicle:</i> <br/>
    <b>Company name:</b> {{ vehicle.companyName }} <br/>
    <b>Company tax ID number:</b> {{ vehicle.taxIdNumber }} <br/>
    <b>Company - contact person:</b> {{ vehicle.contactPerson }} <br/>
    <b>Company - street:</b> {{ vehicle.street }} <br/>
    <b>Company - zip code, city:</b> {{ vehicle.zipCode }} {{ vehicle.city }} <br/>
    <b>Phone:</b> {{ vehicle.phone }} <br/>
    <b>Fax:</b> {{ vehicle.fax }} <br/>
    <b>Mail:</b> {{ vehicle.mail }} <br/><br/>

    <b>VIN:</b> {{ vehicle.vin }} <br/>
    <b>Vehicle registration number:</b> {{ vehicle.registrationNumber }} <br/>
    <b>Vehicle mileage:</b> {{ vehicle.mileage }} <br/>
    <b>Vehicle guarantee type:</b> {{ vehicle.guaranteeType }} <br/>
    <b>Vehicle purchase date:</b> {{ vehicle.purchaseDate | date("d/m/Y") }} <br/>
    <b>Vehicle name/type:</b> {{ vehicle.nameType }} <br/><br/>

    <b>Damage description: </b> {{ accidentCase.damageDescription }} <br/>
    <b>Location: </b> {{ accidentCase.location }} <br/>
    <b>Contact to driver: </b> {{ accidentCase.driverContact }} <br/><br/>

    <hr/>
    <b>Please send an invoice to home dealer (if any costs occurred).</b>

{% endblock %}
